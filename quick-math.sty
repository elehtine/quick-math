\newcommand{\inputcpp}[2]{
  \par\vspace{2pt}
  \noindent
  {\footnotesize\sffamily\bfseries\color{black!70} $\hookrightarrow$ #2}
  \IfFileExists{#1}{
    \lstinputlisting[style=cppstyle]{#1}
  }{
    \par\noindent\textbf{\textcolor{red}{[File not found: \detokenize{#1}]}}
  }
  \par\vspace{2pt}
}

